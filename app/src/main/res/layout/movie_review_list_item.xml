<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="@dimen/movie_review_item_vertical_padding"
    android:paddingBottom="@dimen/movie_review_item_vertical_padding"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/movie_detail_horizontal_padding"
        android:paddingRight="@dimen/movie_detail_horizontal_padding"
        android:paddingBottom="@dimen/movie_detail_vertical_padding"
        android:textColor="@android:color/black"
        android:textSize="@dimen/movie_detail_large_text_size" />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/movie_detail_horizontal_padding"
        android:paddingRight="@dimen/movie_detail_horizontal_padding"
        android:paddingBottom="@dimen/movie_detail_vertical_padding"
        android:textSize="@dimen/movie_detail_default_text_size" />
</LinearLayout>