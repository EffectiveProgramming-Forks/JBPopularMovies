<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.breunig.jeff.project1.activities.MovieDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/movie_detail_vertical_padding"
            android:paddingBottom="@dimen/movie_detail_vertical_padding"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/movie_detail_horizontal_padding"
                android:paddingRight="@dimen/movie_detail_horizontal_padding"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/movie_detail_title_text_size" />
            <ImageView
                android:id="@+id/iv_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/movie_detail_horizontal_padding"
                android:paddingRight="@dimen/movie_detail_horizontal_padding"
                android:paddingTop="@dimen/movie_detail_thumbnail_vertical_padding"
                android:paddingBottom="@dimen/movie_detail_thumbnail_vertical_padding"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/movie_detail_horizontal_padding"
                android:paddingRight="@dimen/movie_detail_horizontal_padding"
                android:paddingBottom="@dimen/movie_detail_details_bottom_padding"
                android:textSize="@dimen/movie_detail_details_text_size" />
            <TextView
                android:id="@+id/tv_user_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/movie_detail_horizontal_padding"
                android:paddingRight="@dimen/movie_detail_horizontal_padding"
                android:paddingBottom="@dimen/movie_detail_details_bottom_padding"
                android:textSize="@dimen/movie_detail_details_text_size" />
            <TextView
                android:id="@+id/tv_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/movie_detail_horizontal_padding"
                android:paddingRight="@dimen/movie_detail_horizontal_padding"
                android:textSize="@dimen/movie_detail_details_text_size" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_movie_trailer_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_movie_review_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
