<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.breunig.jeff.project1.activities.MovieDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/movie_detail_vertical_padding"
            android:orientation="vertical">
            <include
                layout="@layout/movie_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <include
                layout="@layout/movie_poster_date_rating"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/movie_detail_horizontal_padding"
                android:paddingRight="@dimen/movie_detail_horizontal_padding"
                android:paddingBottom="@dimen/movie_detail_vertical_padding"
                android:textSize="@dimen/movie_detail_default_text_size" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_movie_trailer_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"/>
            <TextView
                android:id="@+id/tv_reviews_title"
                android:text="@string/reviews"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/movie_detail_horizontal_padding"
                android:paddingRight="@dimen/movie_detail_horizontal_padding"
                android:paddingTop="@dimen/movie_detail_vertical_padding"
                android:textSize="@dimen/movie_detail_large_text_size" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_movie_review_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"/>
            <TextView
                android:id="@+id/tv_more_reviews"
                android:text="@string/more_reviews"
                android:visibility="gone"
                android:onClick="onClickMoreReviews"
                android:clickable="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/movie_detail_horizontal_padding"
                android:paddingRight="@dimen/movie_detail_horizontal_padding"
                android:textSize="@dimen/movie_detail_large_text_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
