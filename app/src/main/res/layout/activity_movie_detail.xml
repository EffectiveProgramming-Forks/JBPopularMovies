<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.breunig.jeff.project1.activities.MovieDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/movie_detail_vertical_padding"
            android:orientation="vertical">
            <include
                layout="@layout/movie_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/movie_detail_horizontal_padding"
                android:paddingRight="@dimen/movie_detail_horizontal_padding"
                android:paddingTop="@dimen/movie_detail_thumbnail_vertical_padding"
                android:paddingBottom="@dimen/movie_detail_thumbnail_vertical_padding"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/movie_detail_horizontal_padding"
                    android:paddingBottom="@dimen/movie_detail_date_bottom_padding"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:textSize="@dimen/movie_detail_release_date_text_size" />
                <TextView
                    android:id="@+id/tv_user_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/movie_detail_horizontal_padding"
                    android:paddingBottom="@dimen/movie_detail_details_vertical_padding"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:textSize="@dimen/movie_detail_rating_text_size" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/movie_detail_horizontal_padding"
                android:paddingRight="@dimen/movie_detail_horizontal_padding"
                android:paddingBottom="@dimen/movie_detail_details_vertical_padding"
                android:textSize="@dimen/movie_detail_details_text_size" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_movie_trailer_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"/>
            <TextView
                android:text="@string/reviews"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/movie_detail_horizontal_padding"
                android:paddingRight="@dimen/movie_detail_horizontal_padding"
                android:paddingTop="@dimen/movie_detail_details_vertical_padding"
                android:textSize="@dimen/movie_detail_section_header_text_size" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_movie_review_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"/>
            <TextView
                android:id="@+id/tv_more_reviews"
                android:text="@string/more_reviews"
                android:onClick="onClickMoreReviews"
                android:clickable="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/movie_detail_horizontal_padding"
                android:paddingRight="@dimen/movie_detail_horizontal_padding"
                android:textSize="@dimen/movie_detail_all_reviews_text_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
